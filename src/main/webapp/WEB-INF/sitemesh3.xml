<?xml version="1.0"?>
<sitemesh>

    <!-- 配置默认的渲染器. 将应用于所有路径. -->
    <!--<mapping path="/*" decorator="/decorators/head1.jsp"/>-->
    <!--<mapping path="/admin/*" decorator="/left.jsp"/>-->

    <mapping>
        <path>/admin/*</path>
        <decorator>/decorators/left.jsp</decorator>
        <decorator>/decorators/head.jsp</decorator>
    </mapping>
    <mapping>
        <path>/profile/*</path>
        <decorator>/decorators/left.jsp</decorator>
        <decorator>/decorators/head.jsp</decorator>
    </mapping>
    <mapping>
        <path>/account/*</path>
        <decorator>/decorators/left.jsp</decorator>
        <decorator>/decorators/head.jsp</decorator>
    </mapping>
    <mapping>
        <path>/feedback/*</path>
        <decorator>/decorators/left.jsp</decorator>
        <decorator>/decorators/head.jsp</decorator>
    </mapping>
    <mapping>
        <path>/notice/*</path>
        <decorator>/decorators/left.jsp</decorator>
        <decorator>/decorators/head.jsp</decorator>
    </mapping>
    <mapping>
        <path>/product/*</path>
        <decorator>/decorators/left.jsp</decorator>
        <decorator>/decorators/head.jsp</decorator>
    </mapping>

    <!-- 不被渲染的路径. -->
    <mapping path="/admin/ajax/*" exclue="true"/>
    <mapping path="/common/ajax/*" exclue="true"/>
    <mapping path="/profile/ajax/*" exclue="true"/>
    <mapping path="/account/ajax/*" exclue="true"/>
    <mapping path="/feedback/ajax/*" exclue="true"/>
    <mapping path="/notice/ajax/*" exclue="true"/>
    <mapping path="/product/ajax/*" exclue="true"/>
    <mapping path="/js/*" exclue="true"/>
    <mapping path="/css/*" exclue="true"/>
    <mapping path="/fonts/*" exclue="true"/>
    <mapping path="*.png" exclue="true"/>
    <mapping path="/decorators/*" exclue="true"/>
    <mapping path="/error/*" exclue="true"/>

</sitemesh>