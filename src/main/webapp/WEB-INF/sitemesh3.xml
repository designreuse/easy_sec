<?xml version="1.0"?>
<sitemesh>

    <!-- 配置默认的渲染器. 将应用于所有路径. -->
    <!--<mapping path="/*" decorator="/decorators/head1.jsp"/>-->
    <!--<mapping path="/admin/*" decorator="/left.jsp"/>-->

    <mapping>
        <path>/admin/*</path>
        <decorator>/decorators/left.jsp</decorator>
        <decorator>/decorators/head.jsp</decorator>
    </mapping>
